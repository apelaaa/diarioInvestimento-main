<%- include('../partials/header') %>

<div class="container mx-auto px-4 py-6">
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4 mb-6">
        <div>
            <h1 class="text-2xl md:text-3xl font-bold text-white mb-1">Transações</h1>
            <p class="text-slate-400 text-sm">Histórico de compras e vendas</p>
        </div>
        <a href="/transactions/create" class="group inline-flex items-center justify-center gap-2 bg-gradient-to-r from-amber-600 to-amber-500 hover:from-amber-500 hover:to-amber-400 text-white px-5 py-3 rounded-xl font-medium shadow-lg shadow-amber-500/30 hover:shadow-amber-500/50 transition-all duration-300 hover:scale-105">
            <i class="fas fa-plus group-hover:rotate-90 transition-transform duration-300"></i>
            <span>Nova Transação</span>
        </a>
    </div>

    <% if (transactions && transactions.length > 0) { %>
        <!-- Desktop Table View -->
        <div class="hidden md:block bg-slate-800/50 border border-slate-700 rounded-2xl shadow-xl overflow-hidden backdrop-blur-sm">
            <div class="overflow-x-auto">
                <table class="w-full text-left text-sm">
                    <thead class="bg-slate-900/50 text-xs uppercase text-slate-400 font-semibold border-b border-slate-700">
                        <tr>
                            <th class="px-6 py-4">Ativo</th>
                            <th class="px-6 py-4">Tipo</th>
                            <th class="px-6 py-4 text-right">Quantidade</th>
                            <th class="px-6 py-4 text-right">Valor/Un.</th>
                            <th class="px-6 py-4 text-right">Total</th>
                            <th class="px-6 py-4">Data</th>
                            <th class="px-6 py-4 text-center">Ações</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-slate-700">
                        <% transactions.forEach(transaction => { %>
                            <tr class="group hover:bg-slate-700/30 transition-all duration-200">
                                <td class="px-6 py-4">
                                    <div class="flex items-center gap-3">
                                        <div class="w-10 h-10 bg-gradient-to-br from-blue-500/20 to-purple-600/20 rounded-xl flex items-center justify-center font-bold text-blue-400 text-sm group-hover:scale-110 transition-transform">
                                            <%= transaction.Asset.symbol.substring(0, 2) %>
                                        </div>
                                        <div>
                                            <div class="font-medium text-white"><%= transaction.Asset.name %></div>
                                            <div class="text-xs text-slate-400"><%= transaction.Asset.symbol %></div>
                                        </div>
                                    </div>
                                </td>
                                <td class="px-6 py-4">
                                    <span class="inline-flex items-center gap-1.5 px-3 py-1 rounded-full text-xs font-medium
                                        <% if (transaction.type === 'Compra') { %>
                                            bg-emerald-500/10 text-emerald-400 border border-emerald-500/20
                                        <% } else { %>
                                            bg-red-500/10 text-red-400 border border-red-500/20
                                        <% } %>
                                    ">
                                        <i class="fas <%= transaction.type === 'Compra' ? 'fa-arrow-down' : 'fa-arrow-up' %>"></i>
                                        <%= transaction.type %>
                                    </span>
                                </td>
                                <td class="px-6 py-4 text-right font-medium text-slate-300">
                                    <%= transaction.quantity %>
                                </td>
                                <td class="px-6 py-4 text-right font-medium text-slate-300">
                                    R$ <%= parseFloat(transaction.price).toFixed(2) %>
                                </td>
                                <td class="px-6 py-4 text-right font-semibold
                                    <% if (transaction.type === 'Compra') { %>
                                        text-emerald-400
                                    <% } else { %>
                                        text-red-400
                                    <% } %>
                                ">
                                    R$ <%= (transaction.quantity * transaction.price).toFixed(2) %>
                                </td>
                                <td class="px-6 py-4 text-slate-300">
                                    <div class="flex items-center gap-2">
                                        <i class="fas fa-calendar text-slate-500 text-xs"></i>
                                        <span><%= new Date(transaction.date).toLocaleDateString('pt-BR') %></span>
                                    </div>
                                </td>
                                <td class="px-6 py-4">
                                    <div class="flex items-center justify-center gap-2">
                                        <a href="/transactions/<%= transaction.id %>/edit" class="group/btn p-2 hover:bg-blue-500/10 rounded-lg transition-all duration-200" title="Editar">
                                            <i class="fas fa-edit text-blue-400 group-hover/btn:scale-110 transition-transform"></i>
                                        </a>
                                        <form action="/transactions/<%= transaction.id %>?_method=DELETE" method="POST" class="inline" onsubmit="return confirm('Tem certeza que deseja excluir esta transação?')">
                                            <button type="submit" class="group/btn p-2 hover:bg-red-500/10 rounded-lg transition-all duration-200" title="Excluir">
                                                <i class="fas fa-trash text-red-400 group-hover/btn:scale-110 transition-transform"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Mobile Card View -->
        <div class="md:hidden space-y-4">
            <% transactions.forEach(transaction => { %>
                <div class="bg-gradient-to-br from-slate-800 to-slate-800/50 border border-slate-700 rounded-2xl p-5 shadow-lg hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
                    <div class="flex items-start justify-between mb-4">
                        <div class="flex items-center gap-3">
                            <div class="w-12 h-12 bg-gradient-to-br from-blue-500/20 to-purple-600/20 rounded-xl flex items-center justify-center font-bold text-blue-400 text-sm">
                                <%= transaction.Asset.symbol.substring(0, 2) %>
                            </div>
                            <div>
                                <div class="font-semibold text-white"><%= transaction.Asset.name %></div>
                                <div class="text-xs text-slate-400"><%= transaction.Asset.symbol %></div>
                            </div>
                        </div>
                        <span class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-full text-xs font-medium
                            <% if (transaction.type === 'Compra') { %>
                                bg-emerald-500/10 text-emerald-400 border border-emerald-500/20
                            <% } else { %>
                                bg-red-500/10 text-red-400 border border-red-500/20
                            <% } %>
                        ">
                            <i class="fas <%= transaction.type === 'Compra' ? 'fa-arrow-down' : 'fa-arrow-up' %>"></i>
                            <%= transaction.type %>
                        </span>
                    </div>
                    
                    <div class="grid grid-cols-2 gap-3 mb-4">
                        <div class="bg-slate-900/30 rounded-lg p-3">
                            <div class="text-xs text-slate-400 mb-1">Quantidade</div>
                            <div class="font-semibold text-white"><%= transaction.quantity %></div>
                        </div>
                        <div class="bg-slate-900/30 rounded-lg p-3">
                            <div class="text-xs text-slate-400 mb-1">Valor/Un.</div>
                            <div class="font-semibold text-white">R$ <%= parseFloat(transaction.price).toFixed(2) %></div>
                        </div>
                    </div>
                    
                    <div class="bg-slate-900/30 rounded-lg p-3 mb-3">
                        <div class="flex items-center justify-between">
                            <div class="text-xs text-slate-400">Total</div>
                            <div class="text-lg font-bold <%= transaction.type === 'Compra' ? 'text-emerald-400' : 'text-red-400' %>">
                                R$ <%= (transaction.quantity * transaction.price).toFixed(2) %>
                            </div>
                        </div>
                    </div>
                    
                    <div class="flex items-center gap-2 text-xs text-slate-400 mb-4">
                        <i class="fas fa-calendar"></i>
                        <span><%= new Date(transaction.date).toLocaleDateString('pt-BR') %></span>
                    </div>
                    
                    <div class="flex gap-2">
                        <a href="/transactions/<%= transaction.id %>/edit" class="flex-1 flex items-center justify-center gap-2 bg-blue-500/10 hover:bg-blue-500/20 text-blue-400 px-4 py-2.5 rounded-xl font-medium transition-all duration-200 border border-blue-500/20">
                            <i class="fas fa-edit"></i>
                            <span>Editar</span>
                        </a>
                        <form action="/transactions/<%= transaction.id %>?_method=DELETE" method="POST" class="flex-1" onsubmit="return confirm('Tem certeza que deseja excluir esta transação?')">
                            <button type="submit" class="w-full flex items-center justify-center gap-2 bg-red-500/10 hover:bg-red-500/20 text-red-400 px-4 py-2.5 rounded-xl font-medium transition-all duration-200 border border-red-500/20">
                                <i class="fas fa-trash"></i>
                                <span>Excluir</span>
                            </button>
                        </form>
                    </div>
                </div>
            <% }) %>
        </div>
    <% } else { %>
        <!-- Empty State -->
        <div class="flex flex-col items-center justify-center py-16 px-4">
            <div class="mb-6 animate-bounce-slow">
                <div class="w-24 h-24 bg-gradient-to-br from-slate-700 to-slate-800 rounded-3xl flex items-center justify-center">
                    <i class="fas fa-exchange-alt text-4xl text-slate-500"></i>
                </div>
            </div>
            <h3 class="text-xl font-bold text-white mb-2">Nenhuma transação registrada</h3>
            <p class="text-slate-400 text-center mb-6 max-w-md">
                Registre suas primeiras transações de compra ou venda para começar a acompanhar seu portfólio
            </p>
            <a href="/transactions/create" class="group inline-flex items-center gap-2 bg-gradient-to-r from-amber-600 to-amber-500 hover:from-amber-500 hover:to-amber-400 text-white px-6 py-3 rounded-xl font-medium shadow-lg shadow-amber-500/30 hover:shadow-amber-500/50 transition-all duration-300 hover:scale-105">
                <i class="fas fa-plus group-hover:rotate-90 transition-transform duration-300"></i>
                <span>Adicionar Primeira Transação</span>
            </a>
        </div>
    <% } %>
</div>

<%- include('../partials/footer') %>
