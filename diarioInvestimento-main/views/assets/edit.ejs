<%- include('../partials/header') %>

<div class="container mx-auto px-4 py-6 max-w-2xl">
    <div class="mb-6">
        <a href="/assets" class="inline-flex items-center gap-2 text-slate-400 hover:text-white transition-colors mb-4">
            <i class="fas fa-arrow-left"></i>
            <span>Voltar para Ativos</span>
        </a>
        <h1 class="text-2xl md:text-3xl font-bold text-white mb-1">Editar Ativo</h1>
        <p class="text-slate-400 text-sm">Atualize as informa√ß√µes do ativo</p>
    </div>

    <div class="bg-gradient-to-br from-slate-800 to-slate-800/50 border border-slate-700 rounded-2xl p-6 md:p-8 shadow-2xl">
        <form action="/assets/<%= asset.id %>?_method=PUT" method="POST" class="space-y-6">
            <div class="space-y-2">
                <label for="name" class="block text-sm font-medium text-slate-300 flex items-center gap-2">
                    <i class="fas fa-building text-blue-400"></i>
                    <span>Nome do Ativo</span>
                </label>
                <input 
                    type="text" 
                    class="w-full px-4 py-3 bg-slate-900/50 border border-slate-700 rounded-xl text-white placeholder-slate-500 focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none transition-all duration-200 hover:border-slate-600" 
                    id="name" 
                    name="name" 
                    value="<%= asset.name %>" 
                    required
                    autocomplete="off"
                >
            </div>

            <div class="space-y-2">
                <label for="symbol" class="block text-sm font-medium text-slate-300 flex items-center gap-2">
                    <i class="fas fa-tag text-emerald-400"></i>
                    <span>S√≠mbolo (Ticker)</span>
                </label>
                <input 
                    type="text" 
                    class="w-full px-4 py-3 bg-slate-900/50 border border-slate-700 rounded-xl text-white placeholder-slate-500 focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none transition-all duration-200 hover:border-slate-600 uppercase" 
                    id="symbol" 
                    name="symbol" 
                    value="<%= asset.symbol %>" 
                    required
                    autocomplete="off"
                >
            </div>

            <div class="space-y-2">
                <label for="type" class="block text-sm font-medium text-slate-300 flex items-center gap-2">
                    <i class="fas fa-layer-group text-purple-400"></i>
                    <span>Tipo de Ativo</span>
                </label>
                <select 
                    class="w-full px-4 py-3 bg-slate-900/50 border border-slate-700 rounded-xl text-white focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none transition-all duration-200 hover:border-slate-600 cursor-pointer" 
                    id="type" 
                    name="type" 
                    required
                >
                    <option value="A√ß√£o" <%= asset.type === 'A√ß√£o' ? 'selected' : '' %> class="bg-slate-900">üìà A√ß√£o</option>
                    <option value="FII" <%= asset.type === 'FII' ? 'selected' : '' %> class="bg-slate-900">üè¢ FII (Fundo Imobili√°rio)</option>
                    <option value="Cripto" <%= asset.type === 'Cripto' ? 'selected' : '' %> class="bg-slate-900">‚Çø Criptomoeda</option>
                    <option value="Renda Fixa" <%= asset.type === 'Renda Fixa' ? 'selected' : '' %> class="bg-slate-900">üí∞ Renda Fixa</option>
                    <option value="Outro" <%= asset.type === 'Outro' ? 'selected' : '' %> class="bg-slate-900">üìä Outro</option>
                </select>
            </div>

            <!-- Asset Stats (Read-only) -->
            <div class="bg-slate-900/30 border border-slate-700/50 rounded-xl p-4">
                <h3 class="text-sm font-semibold text-slate-300 mb-3 flex items-center gap-2">
                    <i class="fas fa-chart-bar text-amber-400"></i>
                    <span>Estat√≠sticas do Ativo</span>
                </h3>
                <div class="grid grid-cols-2 gap-3">
                    <div>
                        <div class="text-xs text-slate-500 mb-1">Quantidade</div>
                        <div class="text-lg font-bold text-white"><%= asset.quantity || 0 %></div>
                    </div>
                    <div>
                        <div class="text-xs text-slate-500 mb-1">Valor Total</div>
                        <div class="text-lg font-bold text-white">R$ <%= (asset.totalCost || 0).toFixed(2) %></div>
                    </div>
                </div>
                <p class="text-xs text-slate-500 mt-3 flex items-center gap-1">
                    <i class="fas fa-info-circle"></i>
                    <span>Atualize atrav√©s de transa√ß√µes de compra/venda</span>
                </p>
            </div>

            <div class="flex flex-col sm:flex-row items-center gap-3 pt-4 border-t border-slate-700">
                <button 
                    type="submit" 
                    class="group w-full sm:w-auto inline-flex items-center justify-center gap-2 px-6 py-3 rounded-xl font-medium transition-all duration-300 bg-gradient-to-r from-blue-600 to-blue-500 hover:from-blue-500 hover:to-blue-400 text-white shadow-lg shadow-blue-500/30 hover:shadow-blue-500/50 hover:scale-105"
                >
                    <i class="fas fa-save group-hover:scale-110 transition-transform"></i>
                    <span>Atualizar Ativo</span>
                </button>
                <a 
                    href="/assets" 
                    class="w-full sm:w-auto inline-flex items-center justify-center gap-2 px-6 py-3 rounded-xl font-medium transition-all duration-200 bg-slate-700 hover:bg-slate-600 text-white border border-slate-600 hover:border-slate-500"
                >
                    <i class="fas fa-times"></i>
                    <span>Cancelar</span>
                </a>
            </div>
        </form>
    </div>
</div>

<%- include('../partials/footer') %>
