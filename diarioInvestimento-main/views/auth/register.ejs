<%- include('../partials/header') %>

<div class="min-h-[80vh] flex items-center justify-center px-4 py-12">
    <div class="w-full max-w-md">
        <!-- Decorative Background -->
        <div class="absolute inset-0 overflow-hidden pointer-events-none">
            <div class="absolute top-1/4 right-1/4 w-96 h-96 bg-purple-500/5 rounded-full blur-3xl"></div>
            <div class="absolute bottom-1/4 left-1/4 w-96 h-96 bg-blue-500/5 rounded-full blur-3xl"></div>
        </div>

        <div class="relative bg-gradient-to-br from-slate-800 to-slate-800/50 border border-slate-700 rounded-2xl p-8 shadow-2xl backdrop-blur-sm">
            <div class="text-center mb-8">
                <div class="inline-block p-4 bg-gradient-to-br from-purple-500/20 to-blue-600/20 rounded-2xl mb-4">
                    <i class="fas fa-user-plus text-4xl text-purple-400"></i>
                </div>
                <h1 class="text-2xl font-bold text-white mb-2">Crie sua conta</h1>
                <p class="text-slate-400">Comece a controlar seus investimentos hoje</p>
            </div>

            <% if (error) { %>
                <div class="bg-red-500/10 border border-red-500/50 text-red-400 px-4 py-3 rounded-xl mb-6 text-sm flex items-center gap-2 animate-shake">
                    <i class="fas fa-exclamation-circle"></i>
                    <span><%= error %></span>
                </div>
            <% } %>

            <form action="/auth/register" method="POST" class="space-y-5">
                <div class="space-y-2">
                    <label for="name" class="block text-sm font-medium text-slate-300 flex items-center gap-2">
                        <i class="fas fa-user text-emerald-400"></i>
                        <span>Nome</span>
                    </label>
                    <input 
                        type="text" 
                        class="w-full px-4 py-3 bg-slate-900/50 border border-slate-700 rounded-xl text-white placeholder-slate-500 focus:ring-2 focus:ring-purple-500 focus:border-transparent outline-none transition-all duration-200 hover:border-slate-600" 
                        id="name" 
                        name="name" 
                        required 
                        placeholder="Seu nome completo"
                        autocomplete="name"
                    >
                </div>
                <div class="space-y-2">
                    <label for="email" class="block text-sm font-medium text-slate-300 flex items-center gap-2">
                        <i class="fas fa-envelope text-blue-400"></i>
                        <span>Email</span>
                    </label>
                    <input 
                        type="email" 
                        class="w-full px-4 py-3 bg-slate-900/50 border border-slate-700 rounded-xl text-white placeholder-slate-500 focus:ring-2 focus:ring-purple-500 focus:border-transparent outline-none transition-all duration-200 hover:border-slate-600" 
                        id="email" 
                        name="email" 
                        required 
                        placeholder="seu@email.com"
                        autocomplete="email"
                    >
                </div>
                <div class="space-y-2">
                    <label for="password" class="block text-sm font-medium text-slate-300 flex items-center gap-2">
                        <i class="fas fa-lock text-purple-400"></i>
                        <span>Senha</span>
                    </label>
                    <input 
                        type="password" 
                        class="w-full px-4 py-3 bg-slate-900/50 border border-slate-700 rounded-xl text-white placeholder-slate-500 focus:ring-2 focus:ring-purple-500 focus:border-transparent outline-none transition-all duration-200 hover:border-slate-600" 
                        id="password" 
                        name="password" 
                        required 
                        placeholder="••••••••"
                        autocomplete="new-password"
                    >
                    <p class="text-xs text-slate-500 flex items-center gap-1 mt-1">
                        <i class="fas fa-info-circle"></i>
                        <span>Mínimo 6 caracteres</span>
                    </p>
                </div>
                <button 
                    type="submit" 
                    class="group w-full px-4 py-3 rounded-xl font-medium transition-all duration-300 bg-gradient-to-r from-purple-600 to-blue-500 hover:from-purple-500 hover:to-blue-400 text-white shadow-lg shadow-purple-500/30 hover:shadow-purple-500/50 hover:scale-[1.02] flex items-center justify-center gap-2"
                >
                    <span>Criar Conta</span>
                    <i class="fas fa-rocket group-hover:translate-y-[-2px] transition-transform"></i>
                </button>
            </form>

            <div class="mt-6 text-center text-sm text-slate-400">
                Já tem uma conta? 
                <a href="/auth/login" class="text-purple-400 hover:text-purple-300 font-medium transition-colors">
                    Faça login
                </a>
            </div>
        </div>

        <!-- Benefits -->
        <div class="mt-8 space-y-2">
            <div class="flex items-center gap-3 text-sm text-slate-400">
                <i class="fas fa-check-circle text-emerald-400"></i>
                <span>100% gratuito para sempre</span>
            </div>
            <div class="flex items-center gap-3 text-sm text-slate-400">
                <i class="fas fa-check-circle text-emerald-400"></i>
                <span>Sem limite de ativos ou transações</span>
            </div>
            <div class="flex items-center gap-3 text-sm text-slate-400">
                <i class="fas fa-check-circle text-emerald-400"></i>
                <span>Dados seguros e criptografados</span>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>
