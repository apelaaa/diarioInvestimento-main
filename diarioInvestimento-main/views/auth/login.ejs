<%- include('../partials/header') %>

<div class="min-h-[80vh] flex items-center justify-center px-4 py-12">
    <div class="w-full max-w-md">
        <!-- Decorative Background -->
        <div class="absolute inset-0 overflow-hidden pointer-events-none">
            <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-blue-500/5 rounded-full blur-3xl"></div>
            <div class="absolute bottom-1/4 right-1/4 w-96 h-96 bg-purple-500/5 rounded-full blur-3xl"></div>
        </div>

        <div class="relative bg-gradient-to-br from-slate-800 to-slate-800/50 border border-slate-700 rounded-2xl p-8 shadow-2xl backdrop-blur-sm">
            <div class="text-center mb-8">
                <div class="inline-block p-4 bg-gradient-to-br from-blue-500/20 to-purple-600/20 rounded-2xl mb-4">
                    <i class="fas fa-chart-line text-4xl text-blue-400"></i>
                </div>
                <h1 class="text-2xl font-bold text-white mb-2">Bem-vindo de volta</h1>
                <p class="text-slate-400">Entre para gerenciar seus investimentos</p>
            </div>

            <% if (error) { %>
                <div class="bg-red-500/10 border border-red-500/50 text-red-400 px-4 py-3 rounded-xl mb-6 text-sm flex items-center gap-2 animate-shake">
                    <i class="fas fa-exclamation-circle"></i>
                    <span><%= error %></span>
                </div>
            <% } %>

            <form action="/auth/login" method="POST" class="space-y-5">
                <div class="space-y-2">
                    <label for="email" class="block text-sm font-medium text-slate-300 flex items-center gap-2">
                        <i class="fas fa-envelope text-blue-400"></i>
                        <span>Email</span>
                    </label>
                    <input 
                        type="email" 
                        class="w-full px-4 py-3 bg-slate-900/50 border border-slate-700 rounded-xl text-white placeholder-slate-500 focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none transition-all duration-200 hover:border-slate-600" 
                        id="email" 
                        name="email" 
                        required 
                        placeholder="seu@email.com"
                        autocomplete="email"
                    >
                </div>
                <div class="space-y-2">
                    <label for="password" class="block text-sm font-medium text-slate-300 flex items-center gap-2">
                        <i class="fas fa-lock text-purple-400"></i>
                        <span>Senha</span>
                    </label>
                    <input 
                        type="password" 
                        class="w-full px-4 py-3 bg-slate-900/50 border border-slate-700 rounded-xl text-white placeholder-slate-500 focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none transition-all duration-200 hover:border-slate-600" 
                        id="password" 
                        name="password" 
                        required 
                        placeholder="••••••••"
                        autocomplete="current-password"
                    >
                </div>
                <button 
                    type="submit" 
                    class="group w-full px-4 py-3 rounded-xl font-medium transition-all duration-300 bg-gradient-to-r from-blue-600 to-blue-500 hover:from-blue-500 hover:to-blue-400 text-white shadow-lg shadow-blue-500/30 hover:shadow-blue-500/50 hover:scale-[1.02] flex items-center justify-center gap-2"
                >
                    <span>Entrar</span>
                    <i class="fas fa-arrow-right group-hover:translate-x-1 transition-transform"></i>
                </button>
            </form>

            <div class="mt-6 text-center text-sm text-slate-400">
                Não tem uma conta? 
                <a href="/auth/register" class="text-blue-400 hover:text-blue-300 font-medium transition-colors">
                    Registre-se gratuitamente
                </a>
            </div>
        </div>

        <!-- Features -->
        <div class="mt-8 grid grid-cols-3 gap-4 text-center">
            <div class="bg-slate-800/30 border border-slate-700/50 rounded-xl p-3">
                <i class="fas fa-shield-alt text-blue-400 text-lg mb-1"></i>
                <p class="text-xs text-slate-400">Seguro</p>
            </div>
            <div class="bg-slate-800/30 border border-slate-700/50 rounded-xl p-3">
                <i class="fas fa-bolt text-amber-400 text-lg mb-1"></i>
                <p class="text-xs text-slate-400">Rápido</p>
            </div>
            <div class="bg-slate-800/30 border border-slate-700/50 rounded-xl p-3">
                <i class="fas fa-mobile-alt text-emerald-400 text-lg mb-1"></i>
                <p class="text-xs text-slate-400">Responsivo</p>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>
